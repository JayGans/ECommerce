<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backq"
    tools:context="my.edu.wings.SelectSubject">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3BE0DBDB"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0FFFFFF"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"

                android:gravity="center"
                android:id="@+id/csnm"
                android:textColor="#1E1729"
                android:fontFamily="@font/milkynice"
                android:textSize="16dp"
                android:padding="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:drawableLeft="@drawable/ic_wallet"
                android:textColor="#0C0E0C"
                android:textStyle="bold"
                android:visibility="gone"
                android:id="@+id/bal_av1"
                android:drawablePadding="5dp"
                android:layout_marginRight="3dp"


                android:gravity="start"
                android:fontFamily="@font/sf_ui_display_medium"
                android:textSize="16dp"
                android:padding="7dp"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/subject_list"


            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:padding="0dp"
            android:orientation="vertical"

            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
