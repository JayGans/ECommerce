<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="multi.level.mlm.Referfriend">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_horizontal"
       android:padding="10dp"
       android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/referrals"/>
       <TextView
           android:layout_width="match_parent"
           android:padding="3dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"
           android:textColor="#0e0e0e"
           android:fontFamily="sans-serif-smallcaps"
           android:layout_height="wrap_content"
           android:text="You Can Join more member by referring your friends to GRAMVIKAS MULTISERVICES. Send them your referral code."
           />
       <android.support.v7.widget.CardView
           android:layout_width="wrap_content"

           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           card_view:cardBackgroundColor="#185dab"
           android:elevation="8dp"
           android:divider="@android:color/transparent"
           android:dividerHeight="0.0px"
           android:clipToPadding="false"
           android:clipChildren="false"
           android:id="@+id/cardlevel2"
           card_view:cardElevation="0dp"
           card_view:cardPreventCornerOverlap="false">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="5dp"
               android:textSize="18dp"
               android:textColor="#fff"
               android:textStyle="bold"
               android:id="@+id/txtreffrd"
               android:fontFamily="sans-serif-condensed"
               android:text=""/>
       </android.support.v7.widget.CardView>

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#fff"
           android:id="@+id/btreffrd"
           android:layout_marginTop="20dp"
android:layout_gravity="bottom"
           android:layout_marginBottom="20dp"
           android:background="@drawable/buttonback"
           android:text="Invite friends"/>


   </LinearLayout>

</FrameLayout>
